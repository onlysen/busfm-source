body, h1, h2, h3, h4, h5, h6, blockquote, p{
margin: 0;
padding: 0;
}

body{
	margin: 0;
	font-family:verdana, arial, times;
	font-size: 12px;
	vertical-align: top;
	text-align: left;
	background-image:url(images/bg.gif);
	
}

* {margin:0;padding:0;}



a:link, a:visited{
	text-decoration: none;
	color:gray;
}

a:hover{
	text-decoration: none;	
}

p{
padding: 10px 0 0 0;
}


}

.wrapper { background:url(images/bg.gif) repeat center; width: 1000px; float: left; position: relative; padding: 0px}


#bg { width: 1000px; margin: 0 auto;}

#header{
	float: left;
	font-family: font-family: Arial, Helvetica, Georgia, Sans-serif;
	font-size: 14px;
	width: 880px;
	height: 28px;
	padding:100px 0 0 120px;
	background-image:url(images/ln.gif);
	color:gray;
}
#header a:visited{
color:#E4E4E4;
}
#header a:link{
color:#E4E4E4;
}


.sidebar{
width: 224px;
float:left;
margin-top:3.8px;
background: url(images/s_b.gif) repeat-y left center ;
}

.sidebar a:visited {text-decoration: none;color:#767869;}
.sidebar a:link {text-decoration: none;color:#767869;}
.sidebar a:hover{text-decoration: underline;color:white;}


#container{
width: 745px;
margin:7px 0px 0 0;
padding-right:21px;
padding-bottom:10px;
float:right;
border:1.2px solid #242424;
border-right:none;
font-size:13px;
color:#B7B7B7;
background: url(images/bbb.gif) repeat-y left top;
}

#container a:link{
text-decoration:none;
color:white;
}

#container h2{
padding:0px 0 5px 15px;
}

div.postnav{
margin:20px 0 3px 10px;
}

.post-info{
margin:0;
padding-left:15px;
padding-top:0;
color:#8E8E8E;
}


#container a:visited{
text-decoration:none;
color:#E1E1E1;
}


#container a:hover{
text-decoration:underline;color:white;
}

#center { background: url(images/s_top.gif) no-repeat left top;}
#meta { background: url(images/s_bottom.gif) no-repeat left bottom;}
.sidebar h2{ background: #090909;width: 203px; height:20px;padding-left:10px;padding-top: 5px;
			font-family: Arial, Helvetica, Georgia, Sans-serif;
			text-align: left;
			color:#6C6D5F;
}



.sidebar ul{
list-style-type: none;
margin:0px;
padding: 5px 10px 0px 10px;
}

.sidebar ul li{
padding: 12px 0 10px 0;
}

.sidebar ul li h2{
font-family: Georgia, Sans-serif;
font-size: 14px;
}

.sidebar ul ul li{
padding:3px 0 0 0 ;
line-height: 22px;
border-bottom:1px solid #4A4B41;
}

#top{
background-image:url(images/s_b.gif);
}




.post{
padding:10px 0 10px 10px;
margin:0;
}
.post h2{
font-family: Georgia, Sans-serif;
font-size: 18px;
padding: 0 0 6px 0px;
color:white;
}


#footer{
width: 1000px;
margin: 20px 0 2px 0;
font-size: 12px;
text-align:center;
float:left;
color:gray;
}

h1{
font-family: Georgia, Sans-serif;
font-size: 25px;
padding: 0 0 10px 0;
}

p.sidebar{
border-top: 3px solid #ccc;
margin: 10px 0 0 0;
}

.zhuti{
line-height: 20px;
padding-left:28px;
padding-right:10px;
}


.entry {
padding-left:15px;
}



.postmetadata{
	clear: both;
	background:#797979;
	padding:4px;
	margin: 22px 10px 22px 0;
	border-left:solid 1px #3C3C3C;
	border-bottom:solid 1px #3C3C3C;
	}







.navigation{
padding: 50px 0 0 10px;
font-size: 14px;
font-weight: bold;
line-height: 30px;
}




div.menu{
float:left;
width:900px;
padding:1px 0 0 100px;
height:25px;
margin-top:4px ;
background:url(images/menu.jpg) no-repeat top left;
color:gray;
}

ul.r-c{
color:#B7B7B7;
}


.menu ul li {
float:left;
list-style:none;
padding-top:1px;
margin-right:30px;
}

.menu  a:link{
color:#B7B7B7;
text-decoration:none;
}

.menu a:visited{
color:#B7B7B7;
}

.menu a:hover{
color:white;
text-decoration:none;
}

.about{
color:gray;
margin:0;
padding:28px 0 0 10px;
}

.about p{
padding:0 0 3px 0;
}

/* comments */

#comments {
	margin: 15px;
	background-image: url(images/postinfo_line.png);
	background-repeat: no-repeat;
	background-position: right 8px;
	clear: both;
}


.commentlist {
	margin-top: 15px;
	margin-bottom: 15px;
}
.commentlist li {
	-moz-border-radius: 5px;
	-khtml-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius: 2px;
	border: 1px solid gray;
	font-family: georgia, times, verdana;
	background:none;
	padding-top: 8px;
	padding-right: 10px;
	padding-bottom: 12px;
	padding-left: 58px;
	margin-bottom: 10px;
	color:#E4E4E4;
	word-wrap: break-word;
}
.commentlist li.admin {
	-moz-border-radius: 5px;
	-khtml-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius: 5px;
	border: 1px solid #efefef;
	background-color: #f1f9fc;
	padding-top: 8px;
	padding-right: 10px;
	padding-bottom: 8px;
	padding-left: 58px;
	margin-bottom: 10px;
	color: #777;
}
.commentlist li img.avatar {
	float: left;
	margin-left: -50px;
	-moz-border-radius: 2px;
	-khtml-border-radius: 2px;
	-webkit-border-radius: 2px;
	border-radius: 2px;
	border: 1px solid #e8eaea;
	padding: 2px;
	background-color: #fff;
}
.commentlist li cite {
	font-style: normal;
	display: inline-block;
	margin-bottom: 4px;
}
.commentdate {
	font-size: 10px;
	color: #ABABAB;
	font-family: Arial, Helvetica, sans-serif;
	float: right;
}
.commentlist li cite img {
	-moz-border-radius: 0px;
	-khtml-border-radius: 0px;
	-webkit-border-radius: 0px;
	border-radius: 0px;
	background-color:transparent;
	padding: 0px;
	float: right;
	border-top-width: 0px;
	border-right-width: 0px;
	border-bottom-width: 0px;
	border-left-width: 0px;
	border-top-style: none;
	border-right-style: none;
	border-bottom-style: none;
	border-left-style: none;
	margin-top: 2px;
	margin-right: 0px;
	margin-bottom: 0px;
	margin-left: 4px;
}
#commentform{
	background:none;
	margin: 5px 25px 30px 0;
	padding:0px;
	}
	
#commentform p{
	color: white;
	}
	
#commentform a{color: #000; text-decoration: none; border-bottom: 1px dotted #465D71;line-height: 14pt;}
	
#commentform h3{
	font-family: georgia, times, verdana;
	font-size: 10pt;
	font-weight: 300;
	color: #000;
	}

#commentbox{
	width:50%;
	min-width:400px;
	margin:5px 5px 0 0;
	}

#author, #email, #url, #commentbox, #submit{
	background: #fff;
	font-family: verdana, arial, times;
	font-size: 8pt;
	margin:5px 5px 0 0;
	padding: 6px;
	border: 1px solid #B2B2B2;
	}
	
#submit{margin:0;padding:2px;}
.commentlist li p {
	color:#B7B7B7;
}
.commentlist li a {
	color: #05a8dc;
}
#author {
	margin-top: 15px;
}
#author, #email, #url {
	-moz-border-radius: 3px;
	-khtml-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
	border: 1px solid #C0C0C0;
	height: 16px;
	background-color:transparent;
	padding-top: 4px;
	padding-left: 4px;
	color: #aaa;
	width: 180px;
	margin-right: 2px;
}
#comment {
	-moz-border-radius: 3px;
	-khtml-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
	border: 1px solid #C0C0C0;
	height: 150px;
	background-color:transparent;
	padding-top: 4px;
	padding-left: 4px;
	color: #aaa;
	width: 400px;
	margin-right: 2px;
	margin-bottom: 10px;
	padding-right: 6px;
	padding-bottom: 4px;
	overflow: auto;
}
